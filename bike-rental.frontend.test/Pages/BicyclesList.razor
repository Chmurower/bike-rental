@page "/bicycleslist"
@using bike_rental.frontend.test.Models

@inject HttpClient http

<PageTitle>Bicycles review</PageTitle>

<h1>Bicycles</h1>

@if (bicycles == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Model</th>
                <th>Frame size</th>
                <th>Is available</th>
                <th>Is in service</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bicycle in bicycles)
            {
                <tr>
                    <td>@bicycle.Model</td>
                    <td>@bicycle.FrameSize</td>
                    <td>@bicycle.IsAvailable</td>
                    <td>@bicycle.IsInService</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Bicycle> bicycles;

    protected override async Task OnInitializedAsync()
    {
        bicycles = await http.GetFromJsonAsync<List<Bicycle>>("http://localhost:5094/api/bike");
    }
}
